<?xml version="1.0" encoding="utf-8"?>
<extension version="4" type="plugin" group="system" method="upgrade">
	<name>plg_heading_accessibility_checker</name>
	<author>Idowu Festus</author>
	<creationDate>April 2022</creationDate>
	<copyright>Copyright (C) 2005 - 2018 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>idowufestustemiloluwa@gmail.com</authorEmail>
	<version>1.0</version>
	<description>Accessibility Checker Plugin for Heading order in Frontend code for Joomla GSOC'22</description>
	<files>
		<filename plugin="accessibility">accessibility.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/plg_system_accessibility.ini</language>
		<language tag="en-GB">language/en-GB/plg_system_accessibility.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="section"
					type="list"
					label="PLG_SYSTEM_ACCESSIBILITY_SECTION"
					default="administrator"
					validate="options"
					>
					<option value="site">PLG_SYSTEM_ACCESSIBILITY_SECTION_SITE</option>
					<option value="administrator">PLG_SYSTEM_ACCESSIBILITY_SECTION_ADMIN</option>
					<option value="both">PLG_SYSTEM_ACCESSIBILITY_SECTION_BOTH</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>